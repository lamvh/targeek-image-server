{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "pretty": true,
    "types": ["node"],
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "src",
    "rootDir": "src",
    "typeRoots": ["src/types"],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules", "test", "scripts"]
}
